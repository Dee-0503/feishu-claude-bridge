# Feishu App Credentials
FEISHU_APP_ID=your_app_id_here
FEISHU_APP_SECRET=your_app_secret_here

# Feishu Webhook Verification Token (from Feishu Event Subscription settings)
# ⚠️ WebSocket mode: NOT needed (can leave empty)
# ✅ HTTP Webhook mode: REQUIRED
FEISHU_VERIFICATION_TOKEN=

# Feishu Encrypt Key (optional, only if configured in Feishu console)
FEISHU_ENCRYPT_KEY=

# WebSocket Long Connection Mode
# Set to 'true' to use WebSocket (no public URL needed, ideal for local dev)
# Set to 'false' to use HTTP webhook (requires public URL, ideal for production)
FEISHU_USE_LONG_CONNECTION=true

# Target user or chat for notifications
# Use open_id for individual user, or chat_id for group
FEISHU_TARGET_TYPE=open_id
FEISHU_TARGET_ID=your_open_id_or_chat_id

# Server config
PORT=3000

# Hook authentication
HOOK_SECRET=your_shared_secret_here

# Authorization settings
AUTH_TTL_MS=300000
AUTH_POLL_INTERVAL_MS=2000
AUTH_POLL_TIMEOUT_MS=120000

# AI Command Explanation (uses Anthropic-compatible API)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_BASE_URL=                     # Optional: proxy URL for compatible API
EXPLAIN_MODEL=                          # Optional: override model (default: dynamic selection, prefers claude-sonnet)

# Aliyun Voice (for phone calls)
ALIYUN_ACCESS_KEY_ID=
ALIYUN_ACCESS_KEY_SECRET=
PHONE_NUMBER=
