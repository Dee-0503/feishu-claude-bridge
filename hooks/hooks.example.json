{
  "$schema": "https://raw.githubusercontent.com/anthropics/claude-code/main/schemas/hooks.schema.json",
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node /path/to/feishu-claude-bridge/hooks/notify.js stop"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node /path/to/feishu-claude-bridge/hooks/notify.js pre-tool",
            "timeout_ms": 180000
          }
        ]
      }
    ]
  }
}
